<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/me1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/i10"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/far3"
        android:paddingBottom="@dimen/far3"
        android:paddingRight="@dimen/far3"
        android:paddingTop="@dimen/far3"
        />

        <TextView
            android:id="@+id/nameTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/feed_item_padding_bottom"
            android:paddingRight="@dimen/feed_item_padding_bottom"
            android:layout_weight="0"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Name" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/feed_item_padding_bottom"
        android:paddingRight="@dimen/feed_item_padding_bottom"
        android:maxWidth="@dimen/im1"
        android:textColor="#50513e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Message" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/feed_item_padding_bottom"
        android:paddingRight="@dimen/feed_item_padding_bottom"
android:layout_gravity="bottom|center"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>